  <configAlg image="images/SimpleScoring.large.png" name="Data quality Evaluation (Scoring &amp; Explanation) (Simple Scoring)" class="com.ataccama.dqc.tasks.scoring.SimpleScoring">
    <properties defaultScoreColumn="sco_default" defaultExplainColumn="exo_default">
      <scoringCases>
        <scoringCase score="10000000" condition="src_sin is null" description="SIN null" explanation="&#39;SIN_NULL&#39;"/>
