        <scoringCase score="0" condition="length(tostring(tointeger(trashNonDigits(src_sin))))=9" description="SIN valid" explanation="&#39;SIN_VALID&#39;"/>
        <scoringCase score="9000000" condition="todate(meta_last_update,&#39;yyyy/MM/dd&#39;)&gt;today()" description="Meta update in future" explanation="&#39;META_UPDATE_IN_FUTURE&#39;"/>
        <scoringCase score="0" condition="todate(meta_last_update,&#39;yyyy/MM/dd&#39;)&lt;=today()" description="Meta update valid" explanation="&#39;META_LAST_UPDATE_VALID&#39;"/>
        <scoringCase score="10000000" condition="src_gender is null" description="Gender null" explanation="&#39;GENDER_NULL&#39;"/>
      </scoringCases>
    </properties>
